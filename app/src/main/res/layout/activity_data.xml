<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/purple_700"
    tools:context=".DataActivity">
    <LinearLayout
        android:id="@+id/dataAct"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="30dp"
        >

        <ImageButton
            android:id="@+id/back2DaGame"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/purple_700"
            android:src="@android:drawable/ic_menu_revert"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
        <TextView
            android:id="@+id/statistics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Statistics"
            android:textColor="#0ff"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <TextView
            android:id="@+id/wins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Wins: 0"
            android:textColor="#0ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/loses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Loses: 0"
            android:textColor="#0ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/winRate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="WinRate: 14.88%"
            android:textColor="#0ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/bestTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Best time: 12s"
            android:textColor="#0ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/meanTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Mean time: 20s"
            android:textColor="#0ff"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_margin="2dp"/>

        <TextView
            android:id="@+id/settings"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="4dp"
            android:text="Settings"
            android:textColor="#0ff"
            android:textSize="64sp"
            android:textStyle="bold"
            android:layout_margin="8dp"/>

        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:checked="true"
            android:text="Vibrate"
            android:textColor="#0ff" />
    </LinearLayout>


</LinearLayout>